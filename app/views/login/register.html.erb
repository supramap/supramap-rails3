<?xml version="1.0"?>
<%= error_messages_for "user",
:header_message => "Registration Error",
:message => "Sorry, but there were some problems with some of fields." %>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN"
"http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
  <head>
    <title></title>
  </head>
  <body>

  <fieldset>
    <legend>Register New User</legend>
    <%= form_for :user do |form| %> <input type="hidden" id="user_id" name="user[admin]" value="0"/>
        <input type="hidden" id="user_id" name="user[auth]" value="0"/>
        <table>
          <tr>
            <td>
              First Name:
            </td>
            <td>
              <%= form.text_field :firstname, :size => 20 %>
            </td>
          </tr>
          <tr>
            <td>
              Last Name:
            </td>
            <td>
              <%= form.text_field :lastname, :size => 20 %>
            </td>
          </tr>
          <tr>
            <td>
              Username:
            </td>
            <td>
              <%= form.text_field :login, :size => 20 %>
            </td>
          </tr>
          <tr>
            <td>
              <font size="1">alphanumeric only</font>
            </td>
          </tr>
          <tr>
            <td>
              E-Mail:
            </td>
            <td>
              <%= form.text_field :email, :size => 20 %>
            </td>
          </tr>
          <tr>
            <td>
              Password:
            </td>
            <td>
              <%= form.password_field :password, :size => 20 %>
            </td>
          </tr>
          <tr>
            <td>
              <font size="1">6-20 characters, at least one
                nonletter</font>
            </td>
          </tr>
          <tr>
            <td>
              Confirm:
            </td>
            <td>
              <%= form.password_field :password_confirmation, :size => 20 %>
            </td>
          </tr>
          </table>
        <%= submit_tag "Register", :class => "submit" %>
        </fieldset>
    <% end %>

    </body>
</html>
